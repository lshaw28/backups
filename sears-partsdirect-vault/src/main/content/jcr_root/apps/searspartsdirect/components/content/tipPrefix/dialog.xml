<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
		  jcr:primaryType="cq:Dialog"
		  title="Global Tip Configuration"
		  xtype="dialog">
	<items jcr:primaryType="cq:WidgetCollection">
		<GlobalTipPrefix 	jcr:primaryType="cq:Widget"
						xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<tipPrefix jcr:primaryType="cq:Widget"
						fieldLabel="Global tip prefix"
						fieldDescription="Displayed on all Tips components"
						allowBlank="{Boolean}false"
						name="./tipPrefix"
						xtype="textfield"
						maxLength="28" />
			</items>
		</GlobalTipPrefix>
	</items>
</jcr:root>