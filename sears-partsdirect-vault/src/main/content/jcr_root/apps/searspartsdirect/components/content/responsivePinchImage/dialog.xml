<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	jcr:primaryType="cq:TabPanel"
	activeTab="0"
	xtype="tabpanel">
	<items jcr:primaryType="cq:WidgetCollection">
		<desktopImageTab
			jcr:primaryType="cq:Widget"
			itemId="desktopImageTab"
			cropParameter="./desktopImage/imageCrop"
			ddGroups="[media]"
			fileNameParameter="./desktopImage/fileName"
			fileReferenceParameter="./desktopImage/fileReference"
			blankText="An image is required"
			name="./desktopImage/file"
			requestSuffix="/desktopImage.img.png"
			rotateParameter="./desktopImage/imageRotate"
			sizeLimit="100"
			title="Desktop Image"
			uploadUrl="/tmp/upload/*"
			xtype="html5smartimage" />
		<tabletImageTab
			jcr:primaryType="cq:Widget"
			itemId="tabletImageTab"
			cropParameter="./tabletImage/imageCrop"
			ddGroups="[media]"
			fileNameParameter="./tabletImage/fileName"
			fileReferenceParameter="./tabletImage/fileReference"
			blankText="An image is required"
			name="./tabletImage/file"
			requestSuffix="/tabletImage.img.png"
			rotateParameter="./tabletImage/imageRotate"
			sizeLimit="100"
			title="Tablet Image"
			uploadUrl="/tmp/upload/*"
			xtype="html5smartimage" />
		<mobileImageTab
			jcr:primaryType="cq:Widget"
			itemId="mobileImageTab"
			cropParameter="./mobileImage/imageCrop"
			ddGroups="[media]"
			fileNameParameter="./mobileImage/fileName"
			fileReferenceParameter="./mobileImage/fileReference"
			blankText="An image is required"
			name="./mobileImage/file"
			requestSuffix="/mobileImage.img.png"
			rotateParameter="./mobileImage/imageRotate"
			sizeLimit="100"
			title="Mobile Image"
			uploadUrl="/tmp/upload/*"
			xtype="html5smartimage" />
		<imageAltTab
			jcr:primaryType="cq:Widget"
			title="Image Alt Text"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<imageAlt
					jcr:primaryType="cq:Widget"
					fieldLabel="Alternative Text"
					allowBlank="{Boolean}true"
					itemId="imageAlt"
					name="./imageAlt"
					xtype="textfield" />
				<desktopResType
					jcr:primaryType="cq:Widget"
					ignoreData="{Boolean}true"
					name="./desktopImage/sling:resourceType"
					value="foundation/components/image"
					xtype="hidden" />
				<tabletResType
					jcr:primaryType="cq:Widget"
					ignoreData="{Boolean}true"
					name="./tabletImage/sling:resourceType"
					value="foundation/components/image"
					xtype="hidden" />
				<mobileResType
					jcr:primaryType="cq:Widget"
					ignoreData="{Boolean}true"
					name="./mobileImage/sling:resourceType"
					value="foundation/components/image"
					xtype="hidden" />
			</items>
		</imageAltTab>
	</items>
</jcr:root>