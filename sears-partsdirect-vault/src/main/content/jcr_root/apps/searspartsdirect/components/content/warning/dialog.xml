<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
		  jcr:primaryType="cq:Dialog"
		  title="Warning"
		  xtype="dialog">
	<items jcr:primaryType="cq:WidgetCollection">
		<Warning	jcr:primaryType="cq:Widget"
						xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<warningTextEntered jcr:primaryType="cq:Widget"
					   fieldLabel="Enter an ad-hoc warning"
					   fieldDescription="Character limit is 400"
					   allowBlank="{Boolean}true"
					   name="./warningTextEntered"
					   xtype="textfield"
					   maxLength="400" />
				<warningChosen jcr:primaryType="cq:Widget"
						fieldLabel="Choose a warning"
						allowBlank="{Boolean}true"
						editable="false"
						name="./warningChosen"
						xtype="pathfield"
						rootPath="/etc/spdAssets/scaffolding/warning" />
			</items>
		</Warning>
	</items>
</jcr:root>