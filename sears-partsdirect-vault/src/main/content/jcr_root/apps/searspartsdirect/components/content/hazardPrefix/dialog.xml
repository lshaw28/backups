		  jcr:primaryType="cq:Dialog"
		  title="Global Hazards Configuration"
		  xtype="dialog">
	<items jcr:primaryType="cq:WidgetCollection">
		<GlobalHazardPrefix 	jcr:primaryType="cq:Widget"
						xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
