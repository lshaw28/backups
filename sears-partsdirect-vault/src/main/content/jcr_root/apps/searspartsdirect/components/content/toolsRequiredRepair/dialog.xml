<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
		  jcr:primaryType="cq:Dialog"
		  title="Tools Required Repair"
		  xtype="dialog">
	<items jcr:primaryType="cq:WidgetCollection">
		<Panel jcr:primaryType="cq:Widget"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<title jcr:primaryType="cq:Widget"
					fieldLabel="Tools Required Title"
					fieldDescription="Character limit is 50"
					allowBlank="{Boolean}false"
					name="./toolsRequiredTitle"
					xtype="textfield"
					maxLength="50" />
				<multi
					jcr:primaryType="cq:Widget"
					fieldLabel="Tools"
					name="./multiTools"
					xtype="multifield">
					<fieldConfig
						jcr:primaryType="cq:Widget"
						xtype="multicustom">
						<items jcr:primaryType="cq:WidgetCollection">
							<text
								jcr:primaryType="cq:Widget"
								fieldLabel="Tool Name"
								name="text"
								xtype="textfield"/>
							<id
								jcr:primaryType="cq:Widget"
								fieldLabel="ID"
								name="id"
								xtype="textfield"/>
							<url
		                        jcr:primaryType="cq:Widget"
		                        fieldLabel="Link"
		                        name="url"
		                        fieldDescription="Must be a valid link"
		                        regex="Shc.components.extsrc.regex.ValidationPattterns.url"
		                        xtype="textfield"/>
						</items>
					</fieldConfig>
				</multi>
			</items>
		</Panel>
	</items>
</jcr:root>