<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
		  jcr:primaryType="cq:TabPanel"
		  activeTab="0"
		  xtype="tabpanel">
	   <items jcr:primaryType="cq:WidgetCollection">
		   <tab1
				jcr:primaryType="cq:Widget"
				title="Desktop Image"
				xtype="panel">
				<items jcr:primaryType="cq:WidgetCollection">
		 		    <image
		            jcr:primaryType="cq:Widget"
		            cropParameter="./image1/imageCrop"
		            ddGroups="[media]"
		            fileNameParameter="./image1/fileName"
		            fileReferenceParameter="./image1/fileReference"
		            mapParameter="./image1/imageMap"
		            name="./file"
		            requestSuffix=".img.png"
		            rotateParameter="./image1/imageRotate"
		            title="Image1"
		            xtype="html5smartimage"/>
			            	
	                <title
	                    jcr:primaryType="cq:Widget"
	                    fieldLabel="Title"
	                    name="./image1/jcr:title"
	                    xtype="textfield"/>
	                <alt
	                    jcr:primaryType="cq:Widget"
	                    fieldDescription="(leave empty to use the title defined above)"
	                    fieldLabel="Alt Text"
	                    name="./image1/alt"
	                    xtype="textfield"/>
	                <linkURL
	                    jcr:primaryType="cq:Widget"
	                    fieldDescription="Drop files or pages from the Content Finder"
	                    fieldLabel="Link to"
	                    name="./image1/linkURL"
	                    xtype="pathfield"/>
	                <size
	                    jcr:primaryType="cq:Widget"
	                    fieldLabel="Size"
	                    heightParameter="./image1/height"
	                    widthParameter="./image1/width"
	                    xtype="sizefield"/>

	        	</items>
	        </tab1>
        
        <tab2
			jcr:primaryType="cq:Widget"
			title="Tablet Image"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
	 		    <image
	            jcr:primaryType="cq:Widget"
	            cropParameter="./image2/imageCrop"
	            ddGroups="[media]"
	            fileNameParameter="./image2/fileName"
	            fileReferenceParameter="./image2/fileReference"
	            mapParameter="./image2/imageMap"
	            name="./image2/file"
	            requestSuffix=".img.png"
	            rotateParameter="./image2/imageRotate"
	            title="TabletImage"
	            xtype="html5smartimage"/>
		       		            	
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./image2/jcr:title"
                    xtype="textfield"/>
                <alt
                    jcr:primaryType="cq:Widget"
                    fieldDescription="(leave empty to use the title defined above)"
                    fieldLabel="Alt Text"
                    name="./image2/alt"
                    xtype="textfield"/>
                <linkURL
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Drop files or pages from the Content Finder"
                    fieldLabel="Link to"
                    name="./image2/linkURL"
                    xtype="pathfield"/>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./image2/height"
                    widthParameter="./image2/width"
                    xtype="sizefield"/>
           
        	</items>
        </tab2>
        
         <tab3
			jcr:primaryType="cq:Widget"
			title="Mobile Image"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
	 		    <image
	            jcr:primaryType="cq:Widget"
	            cropParameter="./image3/imageCrop"
	            ddGroups="[media]"
	            fileNameParameter="./image3/fileName"
	            fileReferenceParameter="./image3/fileReference"
	            mapParameter="./image3/imageMap"
	            name="./image3/file"
	            requestSuffix=".img.png"
	            rotateParameter="./image3/imageRotate"
	            title="MobileImage"
	            xtype="html5smartimage"/>
		       		            	
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./image3/jcr:title"
                    xtype="textfield"/>
                <alt
                    jcr:primaryType="cq:Widget"
                    fieldDescription="(leave empty to use the title defined above)"
                    fieldLabel="Alt Text"
                    name="./image3/alt"
                    xtype="textfield"/>
                <linkURL
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Drop files or pages from the Content Finder"
                    fieldLabel="Link to"
                    name="./image3/linkURL"
                    xtype="pathfield"/>
                <size
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Size"
                    heightParameter="./image3/height"
                    widthParameter="./image3/width"
                    xtype="sizefield"/>
           
        	</items>
        </tab3>
    </items>
</jcr:root>
