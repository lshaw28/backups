<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	jcr:primaryType="cq:Panel"
	width="500"
	title="Page Relations">
	<items jcr:primaryType="cq:WidgetCollection">
        <pageRelations jcr:primaryType="cq:Widget"
        	fieldLabel="Related Asset Pages"
        	name="./pages"
        	treeRootPath="/etc/spdAssets/scaffolding"
			allowedNodes="brand,productCategory"
        	xtype="pagemapper"/>
        <!-- treeRootPath here must match GUIDES_ROOT defn in Constants.java -->
        <!-- name here must match REL_GUIDES_ATTR defn in GetRelatedGuidesTag (./ disregarded) -->
        <guidesRelations jcr:primaryType="cq:Widget"
        	fieldLabel="Related Guide Pages"
        	name="./relatedGuides"
        	treeRootPath="/content/searspartsdirect/en/repair-guide"
        	xtype="pagemapper"/>
	</items>
</jcr:root>