<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0"
		xmlns:jcr="http://www.jcp.org/jcr/1.0"
		jcr:primaryType="cq:TabPanel"
		title="Guide Description"
		xtype="dialog">
	<items jcr:primaryType="cq:WidgetCollection">
		<tabpanel jcr:primaryType="cq:TabPanel">
			<items jcr:primaryType="cq:WidgetCollection">
						
				 <tab1 jcr:primaryType="cq:Widget" 
					   title="Most Popular Guide Information"
					   xtype="panel">
					  
					<items jcr:primaryType="cq:WidgetCollection">
						<text jcr:primaryType="cq:Widget" 
								fieldLabel="Title"
								name="./title" 
								maxLength="70"
								allowBlank="{Boolean}false"
								xtype="textarea" />
								
						<difficulty 
								jcr:primaryType="cq:Widget" 
								fieldLabel="Difficulty Level"
								name="./difficultyLevel"
								maxLength="1"
								maxValue="{Long}5"
								minValue="{Long}1"
								fieldDescription="Choose a number from 1-5"
								allowBlank="{Boolean}false"
								xtype="numberfield"/>
		
						<time   jcr:primaryType="cq:Widget" 
								fieldLabel="Time Required"
								name="./timeRequired" 
								allowBlank="{Boolean}false"
								xtype="textfield" />
								
						<viewAlltext jcr:primaryType="cq:Widget" 
								fieldLabel="View All link Text"
								name="./viewAllText" 
								maxLength="35"
								allowBlank="{Boolean}false"
								xtype="textarea" />
						
					</items>
				</tab1>
				 <tab2 jcr:primaryType="cq:Widget" 
					   title="All Guides Information"
					   xtype="panel">
					  
					<items jcr:primaryType="cq:WidgetCollection">
						<title jcr:primaryType="cq:Widget" 
								fieldLabel="All Guides Title"
								name="./allGuidestitle" 
								maxLength="42"
								allowBlank="{Boolean}true"
								xtype="textarea" />
						<subTitle jcr:primaryType="cq:Widget" 
								fieldLabel="Sub Category Title"
								name="./subTitle" 
								maxLength="70"
								allowBlank="{Boolean}true"
								xtype="textarea" />
	
					</items>
				</tab2>
			</items>
		</tabpanel>
	</items>
</jcr:root>
