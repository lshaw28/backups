<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	jcr:primaryType="cq:TabPanel"
	activeTab="0"
	xtype="panel">
	<items jcr:primaryType="cq:WidgetCollection">
		<text1 jcr:primaryType="cq:Widget"
			fieldLabel="Text before category name e.g. 'Most Viewed'"
			name="./guidePreText"
			xtype="textfield"
			allowBlank="{Boolean}false"
			maxlength="70"/>
		<text2 jcr:primaryType="cq:Widget"
			fieldLabel="Text after category name e.g. 'Guides'"
			name="./guidePostText"
			xtype="textfield"
			allowBlank="{Boolean}false"
			maxlength="42"/>
		<optionalDescription jcr:primaryType="cq:Widget"
			fieldLabel="View all Text"
			name="./viewAllItemsText"
			xtype="richtext"
			maxlength="140"
			allowBlank="{Boolean}true">
			<rtePlugins
				jcr:primaryType="nt:unstructured"
				path="/apps/searspartsdirect/components/content/text/limitedConfig.infinity.json"
				xtype="cqinclude"/>
		</optionalDescription>
		<url jcr:primaryType="cq:Widget"
			fieldLabel="View all link"
			name="./viewAllItemsLink"
			xtype="textfield"
			allowBlank="{Boolean}true"
			maxlength="70"/>
	</items>
</jcr:root>