<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	jcr:primaryType="cq:TabPanel" activeTab="0" xtype="tabpanel">
	<items jcr:primaryType="cq:WidgetCollection">
		<tab1 jcr:primaryType="cq:Widget" title="Component Type"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<type jcr:primaryType="cq:Widget" fieldLabel="Component Type"
					name="./componentType" type="select" xtype="selection">
					<options jcr:primaryType="cq:WidgetCollection">
						<one
            				jcr:primaryType="nt:unstructured"
            				text="Default Type"
            				value="default"/>
            			<two
            				jcr:primaryType="nt:unstructured"
            				text="Hero Image Component "
            				value="heroimage"/>
            		</options>
            	</type>
            				
				<enableTwoColumnLayOut jcr:primaryType="cq:Widget" fieldLabel="Enable two column lay out" name="./enableTwoColumnLayout" itemId="enable" type="checkbox" xtype="selection">
						</enableTwoColumnLayOut>
			</items>
		</tab1>
		<tab2 jcr:primaryType="cq:Widget" anchor="100%" title="Text"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<type jcr:primaryType="cq:Widget" allowBlank="false"
					fieldLabel="Type:" name="./type" type="radio" xtype="selection">
					<options jcr:primaryType="cq:WidgetCollection">
						<r1 jcr:primaryType="nt:unstructured" text="checkModelNumber"
							value="checkModelNumber" />
						<r2 jcr:primaryType="nt:unstructured" text="purchaseLookup"
							value="purchaseLookup" />
					</options>
				</type>
				<heading jcr:primaryType="cq:Widget" fieldLabel="Heading"
					name="./heading" />
				<text jcr:primaryType="cq:Widget" hideLabel="true" name="./text"
					xtype="richtext">
					<rtePlugins jcr:primaryType="nt:unstructured">
						<links jcr:primaryType="nt:unstructured">
							<linkDialogConfig jcr:primaryType="nt:unstructured"
								height="316">
								<linkAttributes jcr:primaryType="cq:WidgetCollection">
									<linkAdvanced jcr:primaryType="cq:Widget"
										collapsed="true" collapsible="true" inputValue="advanced"
										name="./linkdialog/cq:adhocLinkTrackingTab" title="Link tracking"
										xtype="dialogfieldset">
										<items jcr:primaryType="cq:WidgetCollection">
											<enable jcr:primaryType="nt:unstructured" attribute="enabletracking"
												fieldDescription="override analytics framework settings"
												fieldLabel="Custom link tracking" name="./linkdialog/cq:adhocLinkTrackingEnableTracking"
												xtype="checkbox">
												<listeners jcr:primaryType="nt:unstructured"
													check="function(component){var dlg=component.findParentByType('rtelinkdialog');dlg.enableSCFields(component.checked);}" />
											</enable>
											<events jcr:primaryType="nt:unstructured" attribute="adhocevents"
												fieldDescription="e.g.: event2, event7" fieldLabel="Include SiteCatalyst events"
												name="./linkdialog/cq:adhocLinkTrackingEvents" xtype="textfield" />
											<evars jcr:primaryType="nt:unstructured" attribute="adhocevars"
												fieldDescription="e.g.: eVar1: pagedata.url, prop4: 'const'"
												fieldLabel="Include SiteCatalyst variables" name="./linkdialog/cq:adhocLinkTrackingEvars"
												xtype="textfield" />
										</items>
									</linkAdvanced>
								</linkAttributes>
							</linkDialogConfig>
						</links>
					</rtePlugins>
				</text>
				<richFlag jcr:primaryType="cq:Widget" ignoreData="true"
					name="./textIsRich" value="true" xtype="hidden" />
			</items>
		</tab2>
		<tab3 jcr:primaryType="cq:Widget"
			fileNameParameter="./image/fileName" fileReferenceParameter="./image/fileReference"
			name="./image/file" requestSuffix="/image.img.png"
			sizeLimit="100" title="Image"
			xtype="html5smartimage" />
		<tab4 jcr:primaryType="cq:Widget" title="Advanced Image Properties"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
				<title jcr:primaryType="cq:Widget" fieldLabel="Title"
					name="./image/jcr:title" xtype="textfield" />
				<linkURL jcr:primaryType="cq:Widget"
					fieldDescription="Drop files or pages from the Content Finder"
					fieldLabel="Link to" name="./image/linkURL" xtype="pathfield" />
				<size jcr:primaryType="cq:Widget" fieldLabel="Size"
					heightParameter="./image/height" widthParameter="./image/width"
					xtype="sizefield" />
				<resType jcr:primaryType="cq:Widget" ignoreData="true"
					name="./image/sling:resourceType" value="foundation/components/image"
					xtype="hidden" />
			</items>
		</tab4>
		<tab5 jcr:primaryType="cq:Widget" title="Hero Image Details"
			xtype="panel">
			<items jcr:primaryType="cq:WidgetCollection">
						<headerText jcr:primaryType="cq:Widget"
								fieldLabel="HeaderText"
								name="./headerText"
								allowBlank="{Boolean}false"
								xtype="textarea" />
						<description jcr:primaryType="cq:Widget"
								fieldLabel="Description"
								name="./description"
								allowBlank="{Boolean}false"
								xtype="textarea" />
							
						<buttonText jcr:primaryType="cq:Widget"
								fieldLabel="Text for button"
								name="./buttonText"
								allowBlank="{Boolean}true"
								xtype="textarea" />
				</items>
								
			</tab5>
	</items>
</jcr:root>