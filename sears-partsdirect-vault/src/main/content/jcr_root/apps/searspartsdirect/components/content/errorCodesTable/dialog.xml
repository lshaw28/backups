<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	jcr:primaryType="cq:TabPanel"
	xtype="dialog"
	title="Error Code Table">
	<items jcr:primaryType="cq:WidgetCollection">
		<tabpanel jcr:primaryType="cq:TabPanel">
			<items jcr:primaryType="cq:WidgetCollection">
				<tab1 jcr:primaryType="cq:Widget" 
							   title="Text"
							   xtype="panel">
								   <items jcr:primaryType="cq:WidgetCollection">
										<errorCodeText jcr:primaryType="cq:Widget"
											   fieldLabel="error code table text"
											   name="./errorCodeText"
											   xtype="textfield"
											   maxLength="35"
											   fieldDescription="Character limit is 35" />
										<errorCodeDesc jcr:primaryType="cq:Widget"
												fieldLabel="Error Code Description"
												name="./errorCodeDesc"
												xtype="richtext"
												maxlength="500"
												fieldDescription="Character limit is 500"
												allowBlank="{Boolean}true">
												<rtePlugins
													jcr:primaryType="nt:unstructured"
													path="/apps/searspartsdirect/components/content/text/limitedConfig.infinity.json"
													xtype="cqinclude"/>
										</errorCodeDesc>
								</items>	   			   
				</tab1>
				<tab2 jcr:primaryType="cq:Widget" 
							   title="Table"
							   xtype="panel">
						<items jcr:primaryType="cq:WidgetCollection">
							<multi
					            jcr:primaryType="cq:Widget"
					            fieldLabel="Add/Edit Error codes"
					            name="./errorCodeTable"
					            xtype="multifield">
					            <fieldConfig
					                jcr:primaryType="cq:Widget"
					                xtype="multicustom">
						                <items jcr:primaryType="cq:WidgetCollection">
						                    <codeType
						                        jcr:primaryType="cq:Widget"
						                        fieldLabel="Error Code Type"
						                        name="codeType"
						                        xtype="textfield"/>
						                     <code
						                        jcr:primaryType="cq:Widget"
						                        fieldLabel="Error Code"
						                        name="code"
						                        xtype="textfield"/>
						                     <condition
						                        jcr:primaryType="cq:Widget"
						                        fieldLabel="Condition"
						                        name="condition"
						                        xtype="textfield"/>
						                      <checkRepairLink
						                        jcr:primaryType="cq:Widget"
						                        fieldLabel="Check/Repair"
						                        name="checkRepairLink"
						                        xtype="pathfield"/>          
						                </items>
					            </fieldConfig>
					        </multi>
			       </items> 
		        </tab2>
	      </items>  
        </tabpanel>
	</items>
</jcr:root>