<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:TabPanel"
    title="PRC Address Details"
    xtype="dialog">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            title="Address"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <storename
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Store Name"
                    allowBlank="false"
                    name="./storename"
                    xtype="textfield"/>
                <address1
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Street Address 1"
                    allowBlank="false"
                    name="./address1"
                    xtype="textfield"/>
                <address2
                    jcr:primaryType="nt:unstructured"
                    fieldLabel="Street Address 2"
                    name="./address2"
                    xtype="textfield"/>
                <city
                    jcr:primaryType="nt:unstructured"
                    fieldLabel="City"
                    allowBlank="false"
                    name="./city"
                    xtype="textfield"/>
                <state
                    jcr:primaryType="nt:unstructured"
                    fieldLabel="State"
                    allowBlank="false"
                    name="./state"
                    options="/apps/searspartsdirect/components/content/partsRepairCenter/stateList.json"
                    type="select"
                    xtype="selection"/>
                <zipcode
                    jcr:primaryType="nt:unstructured"
                    fieldDescription="format: xxxxx or xxxxx-xxxx"
                    fieldLabel="Zip Code"
                    allowBlank="false"
                    name="./zipcode"
                    regex="/^([0-9]{5})(?:[-s]*([0-9]{4}))?$/"
                    regexText="Zip code format is wrong"
                    xtype="textfield"/>
                <phone
                    jcr:primaryType="nt:unstructured"
                    fieldDescription="format: XXX-XXX-XXXX or XXX-XXXX or (XXX) XXX-XXXX"
                    fieldLabel="Phone"
                    allowBlank="false"
                    name="./phone"
                    regex="/^((((([0-9]{3})-)|((([0-9]{3}))s))([0-9]{3})-([0-9]{4}))|(([0-9]{3})-([0-9]{4})))$/"
                    regexText="Phone number pattern is wrong"
                    xtype="textfield"/>
                <fax
                    jcr:primaryType="nt:unstructured"
                    fieldDescription="format: XXX-XXX-XXXX or XXX-XXXX or (XXX) XXX-XXXX"
                    fieldLabel="Fax"
                    name="./fax"
                    regex="/^((((([0-9]{3})-)|((([0-9]{3}))s))([0-9]{3})-([0-9]{4}))|(([0-9]{3})-([0-9]{4})))$/"
                    regexText="Fax number pattern is wrong"
                    xtype="textfield"/>
            </items>
        </tab1>
    </items>
</jcr:root>
