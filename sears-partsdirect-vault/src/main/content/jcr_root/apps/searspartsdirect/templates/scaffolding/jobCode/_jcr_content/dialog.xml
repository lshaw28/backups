<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Panel"
            title="Properties">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:content/jcr:title"
                    allowBlank="false"/>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    xtype="textarea"
                    name="./jcr:content/jcr:description"/>
                <id
                    jcr:primaryType="cq:Widget"
                    fieldLabel="ID"
                    xtype="textfield"
                    name="./jcr:content/id"
                    allowBlank="false"/>
            </items>
        </tab1>
        
         <tab2
        	jcr:primaryType="cq:Panel"
        	title="Related Part Type">
        	<items jcr:primaryType="cq:WidgetCollection">
        		<partType
        			jcr:primaryType="cq:Widget"
        			name="./jcr:content/partType"
        			rootPath="/etc/spdAssets/scaffolding/partType"
        			fieldLabel="Part Type"
        			xtype="pathfield"/>
        	</items>
       	</tab2>
       	
       	<tab3
       		jcr:primaryType ="cq:Panel"
       		title="Related Guides">
       		<items jcr:primaryType="cq:WidgetCollection">
	       		<guides jcr:primaryType="cq:Widget"
								fieldLabel="Guides"
								fieldDescription="Guides"
								hideLabel="{Boolean}false"
								treeRootPath="/content/searspartsdirect/en/repair-guide"
								name="./jcr:content/guides"
								xtype="scaffoldingpagemapper" />
			</items>
       	</tab3>
    </items>
</jcr:root>
